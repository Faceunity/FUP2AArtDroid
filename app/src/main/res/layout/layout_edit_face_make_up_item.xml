<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x142"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/x110"
        android:layout_gravity="center">

        <com.faceunity.pta_art.ui.RoundImageView
            android:id="@+id/bottom_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_item_background"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:round_radius="@dimen/x12" />

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/x26"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/sl_shape_make_up"
            android:gravity="center"
            android:textColor="@color/sl_make_up"
            android:textSize="@dimen/x20" />
    </RelativeLayout>

    <View
        android:id="@+id/bottom_item_img_select"
        android:layout_width="@dimen/x126"
        android:layout_height="@dimen/x126"
        android:layout_gravity="center"
        android:background="@drawable/main_item_select" />
</FrameLayout>