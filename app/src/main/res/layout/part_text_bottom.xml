<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x112"
        android:background="#F6F8FA"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/v_bg_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x210"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/v_bg_bottom" />

    <ImageView
        android:id="@+id/iv_re_back"
        android:layout_width="@dimen/x52"
        android:layout_height="@dimen/x112"
        android:layout_marginLeft="@dimen/x30"
        android:scaleType="centerInside"
        android:src="@drawable/icon_back_tab"
        app:layout_constraintBottom_toBottomOf="@id/v_bg_bottom"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/et_input_text"
        android:layout_width="@dimen/x618"
        android:layout_height="@dimen/x72"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/shape_white"
        android:gravity="center_vertical"
        android:hint="在这里输入文字驱动形象"
        android:layout_marginBottom="@dimen/x20"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:singleLine="true"
        android:textColor="@color/colorC6C6C6"
        android:textColorHint="@color/colorC6C6C6"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="@id/v_bg_bottom"
        app:layout_constraintLeft_toRightOf="@id/iv_re_back"
        app:layout_constraintRight_toRightOf="parent"/>

</merge>