<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:animateLayoutChanges="true"
              android:orientation="vertical">

    <com.faceunity.p2a_art.fragment.editface.core.color.ColorSelectView
        android:id="@+id/color_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@color/edit_face_bottom_background"
        android:paddingLeft="@dimen/x8"
        android:paddingRight="@dimen/x8"
        android:scrollbars="none"
        android:visibility="gone"/>

    <com.faceunity.p2a_art.fragment.editface.core.item.ItemSelectView
        android:id="@+id/color_item_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x362"
        android:background="@color/colorWhite"
        android:scrollbars="none"/>
</LinearLayout>
