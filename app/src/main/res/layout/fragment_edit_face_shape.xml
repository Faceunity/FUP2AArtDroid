<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:animateLayoutChanges="true"
    android:gravity="bottom"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/edit_face_shape_position"
        android:layout_width="@dimen/x96"
        android:layout_height="@dimen/x96"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x32"
        android:layout_marginBottom="@dimen/x30"
        android:background="@drawable/edit_face_shape_position"
        android:button="@null"
        android:checked="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x170"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_face_shape_reset"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x90"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:scaleType="centerInside"
            android:src="@drawable/edit_face_shape_reset" />

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/x46"
            android:background="#EEEEEE" />

        <com.faceunity.p2a_art.ui.EditFaceRadioGroup
            android:id="@+id/edit_face_radio_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.faceunity.p2a_art.ui.EditFaceRadio
                android:id="@+id/edit_face_radio_shape_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checked="true"
                app:drawable_checked="@drawable/edit_face_shape_face_checked"
                app:drawable_normal="@drawable/edit_face_shape_face_normal" />

            <com.faceunity.p2a_art.ui.EditFaceRadio
                android:id="@+id/edit_face_radio_shape_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawable_checked="@drawable/edit_face_shape_eye_checked"
                app:drawable_normal="@drawable/edit_face_shape_eye_normal" />

            <com.faceunity.p2a_art.ui.EditFaceRadio
                android:id="@+id/edit_face_radio_shape_mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawable_checked="@drawable/edit_face_shape_mouth_checked"
                app:drawable_normal="@drawable/edit_face_shape_mouth_normal" />

            <com.faceunity.p2a_art.ui.EditFaceRadio
                android:id="@+id/edit_face_radio_shape_nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawable_checked="@drawable/edit_face_shape_nose_checked"
                app:drawable_normal="@drawable/edit_face_shape_nose_normal" />
        </com.faceunity.p2a_art.ui.EditFaceRadioGroup>

    </LinearLayout>
</LinearLayout>