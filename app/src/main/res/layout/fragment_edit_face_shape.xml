<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:animateLayoutChanges="true"
              android:gravity="bottom"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/shape_seek_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@color/edit_face_bottom_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/shape_seek_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center"
            android:text=""/>

        <com.faceunity.p2a_art.ui.seekbar.DiscreteSeekBar
            android:id="@+id/shape_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40"
            app:dsb_indicatorColor="#4C96FF"
            app:dsb_indicatorElevation="0dp"
            app:dsb_indicatorPopupEnabled="true"
            app:dsb_max="100"
            app:dsb_min="-100"
            app:dsb_progressColor="#4C96FF"
            app:dsb_rippleColor="@color/colorWhite"
            app:dsb_scrubberHeight="@dimen/x6"
            app:dsb_thumbSize="@dimen/x32"
            app:dsb_trackBaseHeight="@dimen/x16"
            app:dsb_trackColor="#EEEEEE"
            app:dsb_trackHeight="@dimen/x6"
            app:dsb_value="0"/>
    </LinearLayout>

    <com.faceunity.p2a_art.fragment.editface.core.color.ColorSelectView
        android:id="@+id/shape_color_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@color/edit_face_bottom_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x170"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_face_shape_reset"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x90"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:scaleType="centerInside"
            android:src="@drawable/edit_face_shape_reset"/>

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/x46"
            android:background="#EEEEEE"/>

        <HorizontalScrollView
            android:id="@+id/edit_face_radio_shape_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:scrollbars="none">

            <com.faceunity.p2a_art.ui.EditFaceRadioGroup
                android:id="@+id/edit_face_radio_shape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>
        </HorizontalScrollView>

    </LinearLayout>
</LinearLayout>