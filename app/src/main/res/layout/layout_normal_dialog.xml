<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DB050C15">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/x518"
        android:layout_height="@dimen/x238"
        android:layout_gravity="center"
        android:background="@drawable/delete_avatar_dialog_background">

        <TextView
            android:id="@+id/delete_avatar_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x140"
            android:gravity="center"
            android:text=""
            android:textColor="#373737"
            android:textSize="16sp"/>

        <View
            android:id="@+id/delete_avatar_line_mid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#344152"
            app:layout_constraintTop_toBottomOf="@+id/delete_avatar_text"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/delete_avatar_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text=""
            android:textColor="#373737"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_avatar_positive"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_avatar_line_mid"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/delete_avatar_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text=""
            android:textColor="#373737"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/delete_avatar_negative"
            app:layout_constraintTop_toBottomOf="@+id/delete_avatar_line_mid"/>

        <View
            android:id="@+id/delete_avatar_line"
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x50"
            android:background="#344152"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_avatar_line_mid"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>