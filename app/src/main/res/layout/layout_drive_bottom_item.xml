<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/x30"
    android:paddingTop="@dimen/x5"
    android:paddingBottom="@dimen/x5">

    <com.faceunity.pta_art.ui.RoundImageView
        android:id="@+id/bottom_item_img"
        android:layout_width="@dimen/x112"
        android:layout_height="@dimen/x112"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x7"
        android:layout_marginRight="@dimen/x7"
        android:padding="@dimen/x8"
        android:scaleType="centerCrop"
        app:round_radius="@dimen/x16" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x60"
        android:layout_gravity="center_vertical"
        android:background="@drawable/sl_bg_tone"
        android:gravity="center"
        android:paddingLeft="@dimen/x32"
        android:paddingTop="@dimen/x10"
        android:paddingRight="@dimen/x30"
        android:paddingBottom="@dimen/x10"
        android:textColor="@color/sl_bg_tone_txt"
        android:textSize="@dimen/x28"
        android:visibility="gone" />
</FrameLayout>