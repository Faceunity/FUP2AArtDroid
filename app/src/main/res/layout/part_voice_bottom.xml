<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_voice_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x112"
        android:background="@color/colorF8F8F8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_re_voice_back"
        android:layout_width="@dimen/x52"
        android:layout_height="@dimen/x112"
        android:layout_marginLeft="@dimen/x30"
        android:scaleType="centerInside"
        android:src="@drawable/icon_back_tab"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/v_voice_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_voice_bottom" />

    <com.faceunity.pta_art.ui.audio.AudioRecordButton
        android:id="@+id/arb_voice_tips"
        android:layout_width="@dimen/x618"
        android:layout_height="@dimen/x72"
        android:layout_marginLeft="@dimen/x20"
        android:background="@drawable/sl_audio_bg"
        android:gravity="center"
        android:text="按住 说话"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/c333333"
        android:textSize="@dimen/x32"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_re_voice_back"
        app:layout_constraintLeft_toLeftOf="@id/iv_re_voice_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_re_voice_back" />


</merge>