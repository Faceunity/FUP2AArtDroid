<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/group_photo_show_back"
        android:layout_width="@dimen/x108"
        android:layout_height="@dimen/x108"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/x12"
        android:scaleType="centerInside"
        android:src="@drawable/group_photo_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/group_photo_show_home"
        android:layout_width="@dimen/x108"
        android:layout_height="@dimen/x108"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/x12"
        android:scaleType="centerInside"
        android:src="@drawable/group_photo_home"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/group_photo_show_img"
        android:layout_width="@dimen/x616"
        android:layout_height="@dimen/x716"
        android:layout_marginTop="@dimen/x238"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_group_photo_show_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/group_photo_round"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/group_photo_show_img"
        app:layout_constraintLeft_toLeftOf="@id/group_photo_show_img"
        app:layout_constraintRight_toRightOf="@id/group_photo_show_img"
        app:layout_constraintTop_toTopOf="@id/group_photo_show_img" />

