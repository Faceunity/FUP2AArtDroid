<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x196">

    <ImageView
        android:id="@+id/iv_bucket_cover"
        android:layout_width="@dimen/x140"
        android:layout_height="@dimen/x140"
        android:layout_marginLeft="@dimen/x30"
        android:background="@color/translate"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bucket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:text="相机胶卷"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_32"
        app:layout_constraintBottom_toTopOf="@id/tv_num"
        app:layout_constraintLeft_toRightOf="@id/iv_bucket_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:text="3210"
        android:textColor="#45000000"
        android:textSize="@dimen/text_size_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_bucket_name"
        app:layout_constraintTop_toBottomOf="@id/tv_bucket_name" />

</android.support.constraint.ConstraintLayout>