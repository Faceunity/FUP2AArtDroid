<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/take_photo_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:scaleType="matrix" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99031022">

        <ImageButton
            android:id="@+id/create_dialog_back"
            android:layout_width="@dimen/x72"
            android:layout_height="@dimen/x72"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x48"
            android:background="@android:color/transparent"
            android:onClick="onClick"
            android:padding="@dimen/x10"
            android:scaleType="centerInside"
            android:src="@drawable/layout_back" />

        <TextView
            android:id="@+id/create_dialog_point"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x44"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x360"
            android:gravity="center"
            android:text="请选择性别"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_32" />

        <ImageButton
            android:id="@+id/create_dialog_left"
            android:layout_width="@dimen/x196"
            android:layout_height="@dimen/x196"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/x160"
            android:layout_marginBottom="@dimen/x120"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/take_photo_gender_boy" />

        <ImageButton
            android:id="@+id/create_dialog_right"
            android:layout_width="@dimen/x196"
            android:layout_height="@dimen/x196"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/x160"
            android:layout_marginBottom="@dimen/x120"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/take_photo_gender_girl" />

        <com.faceunity.pta_art.ui.LoadingLayout
            android:id="@+id/create_dialog_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>
</FrameLayout>