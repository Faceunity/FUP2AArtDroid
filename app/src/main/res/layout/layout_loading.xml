<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x278"
        android:layout_marginTop="@dimen/x395"
        android:gravity="left"
        android:text="模型生成中"
        android:textColor="#FFFEFE"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/dialog_loading_img"
        android:layout_width="@dimen/x162"
        android:layout_height="@dimen/x180"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x97"
        android:scaleType="centerCrop"
        android:src="@drawable/take_photo_loading_anim"/>
</LinearLayout>